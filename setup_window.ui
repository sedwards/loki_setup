<?xml version="1.0" encoding="UTF-8"?>
<!-- This UI file is designed for GTK3 using GtkBuilder -->
<interface>
  <!-- Main Setup Window -->
  <object class="GtkWindow" id="setup_window">
    <property name="title">Setup Window</property>
    <property name="default_width">600</property>
    <property name="default_height">400</property>
    <child>
      <!-- Main notebook for the setup pages -->
      <object class="GtkNotebook" id="setup_notebook">
        <child>
          <!-- Page 1 (copy page) -->
          <object class="GtkBox" id="copy_page">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Copy Page Content</property>
              </object>
            </child>
          </object>
          <tab>
            <object class="GtkLabel">
              <property name="label">Copy</property>
            </object>
          </tab>
        </child>
        <child>
          <!-- Page 2 (other page) -->
          <object class="GtkBox" id="other_page">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Other Page Content</property>
              </object>
            </child>
          </object>
          <tab>
            <object class="GtkLabel">
              <property name="label">Other</property>
            </object>
          </tab>
        </child>
      </object>
    </child>
  </object>

  <!-- VBox for options -->
  <object class="GtkBox" id="option_vbox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel" id="label_install_size">
        <property name="label">Install Size</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="label_free_space">
        <property name="label">Free Space</property>
      </object>
    </child>
  </object>

  <!-- Cancel progress button -->
  <object class="GtkButton" id="cancel_progress_button">
    <property name="label">Cancel</property>
  </object>

  <!-- The Readme Dialog -->
  <object class="GtkDialog" id="readme_dialog">
    <property name="title">Readme</property>
    <child>
      <object class="GtkTextView" id="readme_area"/>
    </child>
  </object>

  <!-- Buttons to be re-enabled -->
  <object class="GtkButton" id="button_readme">
    <property name="label">View Readme</property>
  </object>

  <object class="GtkButton" id="class_readme">
    <property name="label">Class Readme</property>
  </object>

  <object class="GtkButton" id="view_readme_progress_button">
    <property name="label">View Readme (Progress)</property>
  </object>

  <object class="GtkButton" id="view_readme_end_button">
    <property name="label">View Readme (End)</property>
  </object>


  <!-- License Dialog -->
  <object class="GtkDialog" id="license_dialog">
    <child>
      <object class="GtkTextView" id="license_area"/>
    </child>
  </object>

</interface>

